@model SESOPtracker.Models.Entities.Sala

@{
    ViewData["Title"] = "Sala " + Model.local;
    ViewData["HeaderTitle"] = "Sala " + Model.local;
}

<section>
    <main>
        <h1> Sala @Model.local </h1>
        <p> @Model.descricao </p>
    </main>

    <h5> Equipamentos relacionados </h5>

    <div class="list">
        @if (Model.Equipamentos == null || !Model.Equipamentos.Any())
        {
            <p> Nenhum equipamento relacionado </p>
        }
        else
        {
            @foreach (var equipamento in Model.Equipamentos)
            {
                <a class="equipamento" asp-controller="Equipamentos" asp-action="Details" asp-route-id="@equipamento.patrimonio">
                    <header>
                        <span style="background: @equipamento.Situacao.cor"></span>
                        <p> @equipamento.Situacao.descricao </p>
                    </header>
                    <span> @equipamento.categoria - @equipamento.subCategoria </span>
                    <h3> @equipamento.patrimonio </h3>

                    @if (equipamento.item != null)
                    {
                        <div><span> item: </span> <span> @equipamento.item </span></div>
                    }
                    @if (equipamento.nome != null)
                    {
                        <div><span> nome: </span> <span> @equipamento.nome </span></div>
                    }

                    <footer>
                        <p> Sala @Model.local </p>
                    </footer>
                </a>
            }
        }
    </div>
</section>



<div class="modal fade" id="deleteSala" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h2>Tem certeza que seja deletar a sala @Model.local ?</h2>
                <p>Ao concordar em deletar, todos os dados da sala, incluindo os equipamentos que nela estão, serão perdidos.</p>
                <div>
                    <p> <span> @Html.DisplayNameFor(model => model.local) </span> @Html.DisplayFor(modelItem => Model.local) </p>
                    <p> <span> @Html.DisplayNameFor(model => model.descricao) </span> @Html.DisplayFor(modelItem => Model.descricao) </p>
                </div>
                <p> Há @Model.EquipamentosCount @(Model.EquipamentosCount != 1 ? "equipamentos" : "equipamento") aqui </p>
            </div>
            <form class="modal-footer" asp-action="DeleteConfirmed">
                <input type="hidden" name="id" value="@Model.salaId" />
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <input type="submit" value="Sim, deletar" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>