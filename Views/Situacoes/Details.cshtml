@model SESOPtracker.Models.Entities.Situacao

@{
    ViewData["Title"] = Model.descricao;
}

<section>
    <header>
        <button onclick="location.href='@Url.Action("Index", new { id = Model.situacaoId })'">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
            </svg>
        </button>
        <button onclick="location.href='@Url.Action("Edit", new { id = Model.situacaoId })'">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
            </svg>
        </button>
        <button id="openModal">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
            </svg>
        </button>
    </header>

    <main>
        <p> Situação </p>
        <h1> <span style="background: @Model.cor"></span> @Model.descricao </h1>
        <p> <span> HEX </span> @Html.DisplayFor(modelItem => Model.cor) </p>
        <p> <span> RGB </span> @Model.ToRgb(Model.cor) </p>
    </main>

    <h5> Equipamentos relacionados </h5>

    <div class="list">
        @if (Model.Equipamentos == null || !Model.Equipamentos.Any()) {
            <p> Nenhum equipamento relacionado </p>
        } else {
            @foreach (var equipamento in Model.Equipamentos) {
                <a class="equipamento" asp-controller="Equipamentos" asp-action="Details" asp-route-id="@equipamento.patrimonio">
                    <header>
                        <span style="background: @Model.cor"></span>
                        <p> @Model.descricao </p>
                    </header>
                    <span> @equipamento.categoria - @equipamento.subCategoria </span>
                    <h3> @equipamento.patrimonio </h3>

                    @if (equipamento.item != null) { <div><span> item: </span> <span> @equipamento.item </span></div> }
                    @if (equipamento.nome != null) { <div><span> nome: </span> <span> @equipamento.nome </span></div> }

                    <footer>
                        <p> Sala @equipamento.Sala.local </p>
                    </footer>
                </a>
            }
        }
    </div>
</section>

<div id="modal" class="modal">
    <div class="modal-content">
        <h2>Tem certeza que seja deletar a situação '@Model.descricao' ?</h2>
        <p>Ao concordar em deletar, todos os dados da situação, incluindo os equipamentos que estão vinculados a ela, serão perdidos.</p>
        <div>
            <p> <span> @Html.DisplayNameFor(model => model.descricao) </span> @Html.DisplayFor(modelItem => Model.descricao) </p>
            <p> <span> @Html.DisplayNameFor(model => model.cor) </span> @Html.DisplayFor(modelItem => Model.cor) </p>
        </div>
        <p> Há @Model.EquipamentosCount @(Model.EquipamentosCount != 1 ? "equipamentos" : "equipamento") aqui </p>
        <form asp-action="DeleteConfirmed">
            <input type="hidden" name="id" value="@Model.situacaoId" />
            <input type="submit" value="Sim, deletar" class="btn btn-danger" />
            <button type="button" class="btn-secondary" id="closeModal">Cancelar</button>
        </form>
    </div>
</div>