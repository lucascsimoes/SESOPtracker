@model SESOPtracker.Models.Entities.Situacao

@{
    ViewData["Title"] = "Situações";
    ViewData["HeaderTitle"] = "Criar situação";
}

<section>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="descricao" class="control-label">Situação</label>
            <fieldset>
                <input asp-for="descricao" />
            </fieldset>
            <span asp-validation-for="descricao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="cor" class="form-label">Cor</label>
            <fieldset>
                <input asp-for="cor" type="color" class="form-control-color" value="#e7e7e7" title="Escolha uma cor" style="width: 100%;">
            </fieldset>
            <span asp-validation-for="cor" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-default">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z" />
            </svg>
        </button>
    </form>
</section>